<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screenPadding">


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_marginTop="@dimen/screenPadding"
        android:layout_marginEnd="-1dp"
        android:padding="@dimen/clickableTextViewPadding"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/tvLetsCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBack"
        android:layout_marginTop="@dimen/screenPadding"
        android:text="Forgot Password"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/app_name_size"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvForgotNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLetsCreate"
        android:gravity="center_horizontal"
        android:textSize="@dimen/app_text_size"
        android:layout_marginTop="@dimen/screenPadding"
        android:text="@string/craving"
        android:textAllCaps="false"
        />

    <LinearLayout
        android:id="@+id/llForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotNote"
        android:layout_marginTop="@dimen/widgetMargin"
        android:layout_marginBottom="@dimen/widgetMargin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:hint="Enter your code here"
            android:imeOptions="actionNext"
            android:singleLine="true" />
    </LinearLayout>


    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/widgetMargin"
        android:background="@drawable/round_button2"
        android:text="Verify Code"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</RelativeLayout>