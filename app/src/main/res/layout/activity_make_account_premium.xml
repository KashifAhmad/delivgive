<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginStart="@dimen/screenPadding"
            android:layout_marginEnd="@dimen/screenPadding">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/screenPadding"
                android:layout_marginEnd="-1dp"
                android:padding="5dp"
                android:src="@drawable/ic_clear_black_24dp" />

            <TextView
                android:id="@+id/tvLetsCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivBack"
                android:layout_marginTop="@dimen/screenPadding"
                android:text="Payment Plans"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/app_name_size"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/llSinglePurchase"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/widgetMargin"
                android:layout_below="@id/tvLetsCreate"
                android:background="@drawable/group_copy_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single \nPurchase"
                        android:textColor="@color/colorPink"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0.99"
                        android:textColor="@color/colorPink"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="per purchase"
                        android:textColor="@color/colorPink" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMonthlySub"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/llSinglePurchase"
                android:layout_marginTop="@dimen/widgetMargin"
                android:background="@drawable/group"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly \nSubscription"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0.99"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="per purchase"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llYearlySubs"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/llMonthlySub"
                android:layout_marginTop="@dimen/widgetMargin"
                android:background="@drawable/group_copy"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbYearly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yearly \nSubscription"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0.99"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/app_name_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="per purchase"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/screenPadding"
            android:layout_margin="@dimen/screenPadding"
            android:layout_below="@id/llYearlySubs">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pexels_photo" />

            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:background="@drawable/round_button2"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </FrameLayout>
    </TableLayout>
</ScrollView>