<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/screenPadding"
    tools:context=".activities.onBoardScreens.FirstIntroScreensActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/introScreenTopMargin"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@color/colorBlue"
            android:src="@drawable/bouquet_32" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivThreeDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvTitleImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widgetMargin"
        android:src="@mipmap/right_dot" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivThreeDot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widgetMargin"
        android:text="Welcome"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widgetMargin"
        android:gravity="center_horizontal"
        android:text="@string/lorem_ipsum" />
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round_button"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
