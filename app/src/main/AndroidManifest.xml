<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techease.delivgive">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.techease.delivgive.activities.SendBouquetActivity"></activity>
        <activity android:name="com.techease.delivgive.activities.DragableView" />
        <activity android:name="com.techease.delivgive.activities.PatternsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/fonts_array" />

        <activity android:name="com.techease.delivgive.activities.AccountSettingActivity" />
        <activity android:name="com.techease.delivgive.activities.SettingsActivity" />
        <activity android:name="com.techease.delivgive.activities.ui.CheckOutActivity" />
        <activity android:name="com.techease.delivgive.activities.AddCardActivity" />
        <activity android:name="com.techease.delivgive.activities.PaymentOptionActivity" />
        <activity android:name="com.techease.delivgive.activities.MakeAccountPremiumActivity" />
        <activity android:name="com.techease.delivgive.activities.onBoardScreens.FirstIntroScreenActivity" />
        <activity android:name="com.techease.delivgive.activities.ChangePasswordActivity" />
        <activity android:name="com.techease.delivgive.activities.VerifyCodeActivity" />
        <activity android:name="com.techease.delivgive.activities.ForgotPasswordSuccessMsgActivity" />
        <activity android:name="com.techease.delivgive.activities.ForgotPasswordActivity" />
        <activity
            android:name="com.techease.delivgive.activities.MainBottomNavActivity"
            android:label="@string/title_activity_main_bottom_nav" />
        <activity android:name="com.techease.delivgive.activities.LoginActivity" />
        <activity android:name="com.techease.delivgive.activities.SignUpActivity" />
        <activity android:name="com.techease.delivgive.activities.LoginSignupSelectionActivity" />
        <activity android:name="com.techease.delivgive.activities.onBoardScreens.SecondIntroScreenActivity" />
        <activity android:name="com.techease.delivgive.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.techease.delivgive.utils.firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.techease.delivgive.utils.firebase.MyJobService" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_arrow_back_black_24dp" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>